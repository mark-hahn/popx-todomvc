
# taskmvc web app popx declaration

project:
  name:         taskmvc
  description:  A popx taskmvc example for taskmvc.com
  author:       Mark Hahn <mark@hahnca.com>
  repository:   mark-hahn/popx-taskmvc

modules:
  # watch new task text input
  newTaskTextInput: 
    $module:    $dom
    $op:        [input]
    $sel:       ["#new-task-inp"]
    changeEvt:  newTaskText
  
  # create new task instance
  newTaskInst:
    $module:    $newObject
    text:       newTaskText
    done:       [false]
    $instance:  taskInst
    
  # turn task instance into DOM element
  # uses moustache template from file
  newTaskEle:
    $module:    $dom
    $op:        [createEle]
    $model:     taskInst
    $template:  [file, item.html]
    $ele:       newTaskEle
  
  # add task ele to ele list (model)  
  addItemToList:
    $module:    $arrayOps
    $op:        [unshift]
    $item:      newTaskEle
    $array:     taskEleList
    
  # watch all task done checkbox inputs
  doneChkboxes:
    $module:    $dom
    $op:        [input]
    $evtDest:   ["#task-list"]
    $sel:       [.done-chkbox]
    $ancestSel: [.task]
    $ancestEle: checkTask
    $value:     taskCheckVal
    
  # set class to checked if wire itemChecked is true
  showItemDone:
    $module:    $dom
    $op:        [setClass]
    $ele:       checkTask
    $if:        taskCheckVal
    $class:     [done]

  # watch all delete buttons
  deleteBtns:
    $module:    $dom
    $sel:       [.del-btn]
    $ancestSel: [.task]
    $ancestEle: delTask
    clickEvt:   taskDeleteEvt
  
  # remove task ele from task list on deleteEle event
  removeItem:
    $module:    $arrayOps
    $op:        [delete]
    $item:      taskDeleteEle
    $array:     taskEleList
    
  # create/add task list to dom and react to changes
  showList:
    $module:    $dom
    $ele:       ["#task-list"]
    $children:  taskEleList
  
  # print changes to console for any wires listed
  log:
    $module:    $log
    newTaskText:
    taskInst:
    newTaskEle:
    taskDeleteEle:  
    taskEleList:
    itemCheckedEle:
    itemChecked:
    
